@using PierreData.Models;

@{
  Layout = "_Layout";
}

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  <p><em>@vendor.Description</em></p>
}

<h3><a href='/vendors/new'>Add a new vendor to sales database</a></h3>